<UserControl x:Class="HoleNexusLauncher.Controls.PopularScript2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HoleNexusLauncher.Controls"
             mc:Ignorable="d" Height="130" Width="215">
    <Border CornerRadius="5" BorderThickness="1" Margin="2">
        <!--#region Skibidi Gradient-->
        <Border.BorderBrush>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF232A42"/>
                <GradientStop Color="#FF586BA8" Offset="1"/>
            </LinearGradientBrush>
        </Border.BorderBrush>
        <Border.Background>
            <ImageBrush x:Name="BackImage"/>
        </Border.Background>
        <!--#endregion-->
        <Grid>
            <Border Margin="0,99,0,0" Background="#0E111B" CornerRadius="0,0,5,5" BorderThickness="0,1,0,0">
                <Border.BorderBrush>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0" Opacity="1">
                        <LinearGradientBrush.RelativeTransform>
                            <TransformGroup>
                                <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                                <SkewTransform CenterX="0.5" CenterY="0.5"/>
                                <RotateTransform Angle="-90" CenterX="0.5" CenterY="0.5"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </LinearGradientBrush.RelativeTransform>
                        <GradientStop Color="#FF586BA8"/>
                        <GradientStop Color="#22232A42" Offset="1"/>
                    </LinearGradientBrush>
                </Border.BorderBrush>
                <Grid Margin="0,-8,0,0">
                    <TextBlock x:Name="ScriptNameLabel" Text="Script Name" FontSize="9" FontFamily="Outfit Medium" Foreground="#C7C7C7" VerticalAlignment="Top" HorizontalAlignment="Left" Width="111" Height="22" Margin="3,10,0,0" TextWrapping="Wrap" TextAlignment="Left" TextTrimming="CharacterEllipsis" FontWeight="Bold"/>
                    <Button x:Name="Copy" Content="Copy Script" Width="88" Margin="116,10,0,2" HorizontalAlignment="Left" Click="Copy_Click" Foreground="White" FontSize="12" Cursor="Hand" BorderThickness="1" FontFamily="Comic Sans MS">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border CornerRadius="5" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>

                        <Button.BorderBrush>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#FF232A42"/>
                                <GradientStop Color="#FF586BA8" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.BorderBrush>

                        <Button.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#FF06080D"/>
                                <GradientStop Color="#FF1F2B55" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                    </Button>
                </Grid>
            </Border>
        </Grid>
    </Border>
</UserControl>
